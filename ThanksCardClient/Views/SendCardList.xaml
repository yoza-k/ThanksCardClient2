        <TextBlock HorizontalAlignment="Left" Height="146" Margin="29,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161">
            <TextBlock.Background>
                <ImageBrush ImageSource="/Views/83979393_480x470.png"/>
